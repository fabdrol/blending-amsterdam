<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p><a href="<%- urlFor({ controller: 'pages', action: 'new' }) %>">New Page</a></p>
    <% if(pages.length > 0) { %>
    <table width="500px" cellpadding="5px" cellspacing="0" border="0">
    	<thead>
    		<tr align="left">
                <th width="5%">#</th>
                <th>Title</th>
                <th width="30%">Actions</th>
            </tr>
    	</thead>

    	<tbody>
    		<% for(var i in pages) { %>
    		<tr>
                <td><%= (parseInt(i) + 1) %></td>
                <td><a href="<%- urlFor({ controller: 'pages', id: pages[i]._id, action: 'show' }) %>"><%= pages[i].content.title %></a></td>
                <td>
                    <form method="post" name="delete_form" action="<%- urlFor({ controller: 'pages', id: pages[i]._id, action: 'destroy' }) %>">
                        <input type="button" onclick="window.location.href = '<%- urlFor({ controller: 'pages', id: pages[i]._id, action: 'edit' }) %>';" value="Edit">

                        <input type="hidden" name="_method" value="DELETE">
                        <input type="submit" value="Delete">
                    </form>
                </td>
            </tr>

            <% for(var i in pages) { %>
            <% } %>
            
    		<% } %>
    	</tbody>
    </table>
    <% } else { %>
    <h2>No pages found...</h2>
    <% } %>
  </body>
</html>